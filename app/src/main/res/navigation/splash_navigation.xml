<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash_navigation.xml"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.taetae98.gachonqr.fragment.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_splashFragment_to_loginActivity"
            app:destination="@id/loginActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.taetae98.gachonqr.activity.MainActivity"
        tools:layout="@layout/activity_main"/>
    <activity
        android:id="@+id/loginActivity"
        android:name="com.taetae98.gachonqr.activity.LoginActivity"
        tools:layout="@layout/activity_login"/>
</navigation>