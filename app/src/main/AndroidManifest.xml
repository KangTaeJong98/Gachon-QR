<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taetae98.gachonqr">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:name=".GachonQRApplication"
        android:icon="@drawable/icon_gachon_qr"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_gachon_qr_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.GachonQR">
        <activity
            android:name=".activity.LoginActivity"
            android:windowSoftInputMode="adjustResize">

        </activity>
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/Theme.GachonQR.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity">

        </activity>
    </application>

</manifest>